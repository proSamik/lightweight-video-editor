{
  "name": "lightweight-video-editor",
  "version": "1.0.0",
  "description": "A professional Electron-based video editor that specializes in adding captions to videos with word-level timing. Create karaoke-style subtitles with AI transcription, real-time editing, and pixel-perfect preview.",
  "main": "dist/main/main/main.js",
  "scripts": {
    "build-main": "tsc --project src/main/tsconfig.json",
    "build-renderer": "webpack --mode production",
    "build": "npm run build-main && npm run build-renderer",
    "start": "npm run build-main && electron .",
    "dev": "npm run build-main && concurrently \"npm run watch-main\" \"npm run dev-renderer\"",
    "watch-main": "tsc --project src/main/tsconfig.json --watch",
    "dev-renderer": "webpack serve --mode development",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proSamik/lightweight-video-editor.git"
  },
  "keywords": ["video-editor", "captions", "subtitles", "ai-transcription", "karaoke", "electron", "ffmpeg"],
  "author": "Lightweight Video Editor Team",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/proSamik/lightweight-video-editor/issues"
  },
  "homepage": "https://github.com/proSamik/lightweight-video-editor#readme",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "svg2png": "^4.1.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "canvas": "^3.1.2",
    "canvas-record": "^5.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "skia-canvas": "^2.0.2",
    "webm-writer": "^1.0.0"
  },
  "build": {
    "appId": "com.lightweight.video-editor",
    "productName": "Lightweight Video Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "build/icons/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Lightweight Video Editor",
      "icon": "build/icons/icon.png",
      "background": "build/background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Video",
      "icon": "build/icons/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "msi",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    }
  }
}
